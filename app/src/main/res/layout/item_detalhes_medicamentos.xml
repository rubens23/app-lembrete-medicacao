<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/item_medicamento"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">




    <TextView
        android:id="@+id/tv_detail_medicine_name"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/time_dosage"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/res_nome_med_detalhe"
        android:textSize="32sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/time_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/res_horario_dose"
        android:textSize="32sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toStartOf="@id/iv_status_dosage"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_status_dosage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:civ_border_width="2dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/time_dosage"
        app:layout_constraintBottom_toBottomOf="@id/time_dosage"
        android:contentDescription="@string/res_description_detail_med"
        android:src="@drawable/med_not_taken"/>

    <FrameLayout
        android:id="@+id/divisoria"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/time_dosage"
        android:background="#FA5252"/>




</androidx.constraintlayout.widget.ConstraintLayout>